<div class="d-flex align-items-center">
  <h1><%= @month.year %> 年 <%= @month.month %>月 健康状態登録一覧</h1>
  <div class="ml-auto">
      <%= link_to '登録', new_health_path, class: 'btn btn-outline-dark' %>
    </div>
</div>
<% if flash[:notice] %>
  <div class="alert alert-primary"><%= flash[:notice] %></div>
<% end %>
<div>
  <p>所属：</p>
  <p>氏名：<%= @current_user.name %></p>
  <%= link_to "<前月",healths_path(month:@month.prev_month) %>
  <%= link_to "次月>",healths_path(month:@month.next_month) %>
</div>

<div class='index'>
 <div class='col-mid-12'>
  <table class="table table-striped">
    <thead class="thead-light">
      <tr>
        <th>日付</th>
        <th>体温（朝）</th>
        <th>体温（夕）</th>
        <th>咳嗽</th>
        <th>呼吸困難</th>
        <th>鼻汁・鼻閉</th>
        <th>咽頭痛</th>
        <th>頭痛</th>
        <th>下痢</th>
        <th>味覚異常</th>
        <th>嗅覚異常</th>
        <th>その他</th>
        <th>更新</th>
        <th>行動記録</th>
        <th>更新</th>
      </tr>
    </thead>
    <tbody>
      <%# 該当月の日数を取得 %>
      <% days = end_of_month %>

      <%# 月初、月末取得 %>
      <% first = first_day %>
      <% last = last_day %>

      <% not_date = 0 %>

      <%# 日数分繰り返し %>
      <% while first <= last do %>
        <% @healths.each do |health| %>
          <% if health.date == first %>
            <tr>
              <td><%= health.date.day %>日</td>
              <td><%= health.temperature_morning %></td>
              <td><%= health.temperature_night %></td>
              <td><%= health.cough %></td>
              <td><%= health.dyspnea %></td>
              <td><%= health.nasal %></td>
              <td><%= health.throat %></td>
              <td><%= health.headache %></td>
              <td><%= health.diarrhea %></td>
              <td><%= health.taste %></td>
              <td><%= health.smell %></td>
              <td><%= health.ather %></td>
              <td><%= link_to '編集', edit_health_path(health), class: 'btn btn-outline-dark' %></td>
              <td></td>
              <td></td>
            </tr>
            <% not_date = 0 %>
            <% break %>
          <% else %>
            <% not_date = 1 %>
          <% end %>
        <% end %>
        <% if not_date == 1 %>
          <tr>
            <td><%= first.day %>日</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td>
            <%= link_to '登録', new_health_path(date: first), class: 'btn btn-outline-dark' %></td>
            <td></td>
            <td></td>
          </tr>
        <% end %>
        <% not_date = 0 %>
        <% first += 1 %>
      <% end %>
    </tbody>
  </table>
 </div>
</div>